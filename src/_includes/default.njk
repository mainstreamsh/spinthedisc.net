---
layout: main
---
{% include "nav.njk" %}

<header class="py-12">
    {% if subtitle != "" %}
      <h1 class="xl:text-8xl sm:text-6xl xs:text-5xl text-4xl font-medium tracking-normal leading-tight text-center pb-6">
      {{ title }}
      </h1>
      <h2 class="xl:text-6xl sm:text-5xl xs:text-4xl text-3xl font-light tracking-widest leading-tight text-center">
      {{ subtitle }}
      </h2>

    {% else %}
      <h1 class="xl:text-8xl sm:text-6xl xs:text-5xl text-4xl font-medium tracking-normal pt-4 pb-4 xl:pb-6 leading-tight text-center">
      {{ title }}
      </h1>
    {% endif %}
</header>

<section class="prose prose-xl prose-main dark:prose-invert hover:prose-a:text-secondary leading-loose pb-12 grid 2xl:grid-cols-4 xl:grid-cols-3 md:grid-cols-2 xs:grid-cols-2 grid-cols-1">
  {{ content | safe }}
</section>
